# ============================================
# Contract Addresses (Update after deployment)
# ============================================

# Main Quadratic Funding Contract
VITE_QUADRATIC_FUNDING_ADDRESS=0x0000000000000000000000000000000000000000

# Component Contracts
VITE_PROJECT_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
VITE_DONATION_ROUND_ADDRESS=0x0000000000000000000000000000000000000000
VITE_MATCHING_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# Network Configuration
# ============================================

# Sepolia Testnet (11155111)
VITE_CHAIN_ID=11155111
VITE_NETWORK_NAME=Sepolia
VITE_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Block Explorer
VITE_BLOCK_EXPLORER_URL=https://sepolia.etherscan.io

# ============================================
# Zama FHE Gateway (v0.8.0)
# ============================================

# Gateway URL for FHE decryption requests
VITE_GATEWAY_URL=https://gateway.sepolia.zama.ai

# FHE Relayer SDK Version
VITE_FHE_SDK_VERSION=0.2.0

# ============================================
# Web3 Configuration
# ============================================

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Enable test networks in wallet
VITE_ENABLE_TESTNETS=true

# ============================================
# Application Settings
# ============================================

# Application Name
VITE_APP_NAME=FHE Funding

# Application Description
VITE_APP_DESCRIPTION=Privacy-First Quadratic Funding Platform

# Application URL
VITE_APP_URL=https://fhe-funding.vercel.app

# ============================================
# Feature Flags
# ============================================

# Enable FHE encryption
VITE_ENABLE_FHE=true

# Enable mock data for development
VITE_ENABLE_MOCK_DATA=false

# Enable debug logging
VITE_DEBUG=false

# ============================================
# API & Services
# ============================================

# IPFS Gateway for metadata
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# The Graph API URL (if using)
VITE_GRAPH_API_URL=

# ============================================
# UI Configuration
# ============================================

# Default theme (light/dark)
VITE_DEFAULT_THEME=light

# Enable animations
VITE_ENABLE_ANIMATIONS=true
